<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
    <h3 class="margin">Edit Products</h2>
    <h3 id='warning'>{{messages.warning}}</h3>
</div>

<div class="divMan">
	<div class="divBoy">
<form class="form_text" role="form" action="/products/update/{{data.Product_ID}}" method="POST">
	<div class="form-group">
		<label for="des">Category </label>
		<select class="btn btn-primary btn-block dropdown-toggle" type="button" data-toggle="dropdown" name="CategoryID">
			{{#categories}}
				<option {{selected}} value="{{id}}">{{Category}}</option>
			{{/categories}}
		</select>
	</div>
	<div class="form-group">
		<label for="des">Description</label>
		<input type="text" class="form-control" name="Product" value="{{data.Product}}">
	</div>
	<button type="submit" class="btn btn-default">Submit</button>
</form>

</div>
</div>
