<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
    <h2 class="margin">Add Products</h2>
    <h3 id='warning'>{{messages.warning}}</h3>
</div>
<div class="divMan">
    <form class="form_text" action="/products/add" method="POST">
        <div class="form-group">
            <label for="sel1">Category</label>

            <select id="btn-primary2" class="form-control" name="CategoryID">
                {{#categories}}
                    <option value="{{id}}">{{Category}}</option>
                {{/categories}}
            </select>
        </div>

        <div class="form-group">
            <label for="des">Description</label>
            <input type="text" class="form-control" id="pwd" name="Product" value="{{Product}}">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
