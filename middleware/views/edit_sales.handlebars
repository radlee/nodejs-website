<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
    <h2 class="margin">Edit Sales</h2>
    <h4 id='warning'>{{messages.warning}}</h4>
</div>
<div class="divMan">
	<div class="divBoy">
<form class="form_text" role="form" action="/sales/update/{{data.Sales_ID}}" method="POST">
  <input type="hidden" name="Sales_ID" value="{{data.Sales_ID}}">
	<div class="form-group">
		<label for="des">Product Name</label>

    <select id="btn-primary2" class="form-control" name="Product_ID">
      {{#products}}
      <option {{selected}} value="{{Product_ID}}">{{Product}}</option>
      {{/products}}
    </select>
    <!-- or id -->
	</div>

	<div class="form-group">
		<label for="des">Date</label>
		<input type="date" class="form-control" name="Date" value="{{data.Date}}">
	</div>

	<div class="form-group">
		<label for="des">Quantity</label>
		<input type="text" class="form-control" name="Quantity" value="{{data.Quantity}}">
	</div>

	<div class="form-group">
		<label for="des">Price</label>
		<input type="text" class="form-control" name="Price" value="{{data.Price}}">
	</div>

	<button type="submit" class="btn btn-default">Submit</button>
</form>
</div>
</div>
