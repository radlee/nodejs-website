<div id="csricodexmlab" class="container-fluid bg-3 text-center jumbotron">
    <h2 class="margin">Add Purchases</h2>
    <h4 id='warning'>{{messages.warning}}</h4>
</div>
<div class="divMan">


	<form class="form_text" role="form" action="/purchases/add" method="POST">
		<div class="form-group">
			<label for="">Supplier</label>
			<input type="text" class="form-control" name="Shop" value="{{purchasesData.Shop}}">
		</div>
		<div class="form-group">
			<label for="des">Date</label>
			<input type="date" class="form-control" name="Date" value="{{purchasesData.Date}}">
		</div>
		<div class="form-group">
			<label for="des">Quantity</label>
			<input type="text" class="form-control" name="Quantity" value="{{purchasesData.Quantity}}">
		</div>
		<div class="form-group">
			<label for="des">Cost Per Item</label>
			<input type="text" class="form-control" name="CostPerItem" value="{{purchasesData.CostPerItem}}">
		</div>
    <div class="form-group">
  		<label for="des">Product Name</label>
      <select id="btn-primary2" class="form-control" name="id">
        {{#products}}
        <option  value="{{Product_ID}}">{{Product}}</option>
        {{/products}}
      </select>
  	</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>
